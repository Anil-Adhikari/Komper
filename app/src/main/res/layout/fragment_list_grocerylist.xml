<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardview_list_grocerylist">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/gcl_label"
                android:text="@string/grocery_label"
                android:textSize="15dp"
                tools:layout_editor_absoluteY="10dp"
                tools:layout_editor_absoluteX="13dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/gcl_date"
                android:text="@string/date_created"
                android:textSize="15dp"
                tools:layout_editor_absoluteY="28dp"
                tools:layout_editor_absoluteX="13dp"
                app:layout_constraintTop_toBottomOf="@+id/gcl_label"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/gcl_price"
                android:text="@string/total_price"
                android:textSize="15dp"
                tools:layout_editor_absoluteY="46dp"
                tools:layout_editor_absoluteX="13dp"
                app:layout_constraintTop_toBottomOf="@+id/gcl_date"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/gcl_totalnumberofItems"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/item_number"
                android:textSize="15dp"
                tools:layout_editor_absoluteY="64dp"
                tools:layout_editor_absoluteX="8dp"
                app:layout_constraintTop_toBottomOf="@+id/gcl_price"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/grocery_list_receipt_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>